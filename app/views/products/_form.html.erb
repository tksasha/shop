<%= simple_form_for resource, remote: remote do |f| %>
  <%= f.input :name %>

  <%= f.input :price %>

  <%= f.input :discount_price %>

  <%= f.input :amount %>

  <%= f.input :category_ids, collection: Category.all, input_html: { multiple: true, class: 'multiselect' } %>

  <%= f.input :image, as: :file %>

  <%= f.submit class: 'btn btn-primary btn-block' %>
<% end %>
