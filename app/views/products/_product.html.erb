<tr id="<%= dom_id product %>">
  <td><%= product.name %></td>

  <td><%= product.formated_price %></td>

  <td><%= product.categories.pluck(:name).to_sentence %></td>

  <td><%= link_to 'view', product, class: 'btn btn-link btn-xs' %></td>

  <td><%= link_to 'edit', [:edit, product], class: 'btn btn-link btn-xs' if policy(product).edit? %></td>

  <% if policy(product).destroy? %>
    <td><%= link_to 'delete', product, class: 'btn btn-link btn-xs',
            data: { method: :delete, confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>